<Page
    x:Class="New_You.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:New_You"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Assets/bb/b2.jpg" Opacity="0.4" />
        </Grid.Background>

        
        <StackPanel Orientation="Vertical"  >
            <TextBlock Text="Happy NewYou" Foreground="White" 
                       FontSize="60"
                       HorizontalAlignment="Center"/>
         <Grid x:Name="One" Height="500" 
              HorizontalAlignment="Center"
              Width="370">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                    <Button x:ConnectionId='1' Content="Images" Height="120" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"                />
                    <Button x:ConnectionId='2' Content="Quotes" Height="120" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"                  />
                    <Button x:ConnectionId='3' Content="Articles" Height="120" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center"                     />
                </StackPanel>
            </Grid>

        </StackPanel>


        <!--<Image Source="http://images4.alphacoders.com/255/255838.jpg" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"
                  />-->




    </Grid>
</Page>

